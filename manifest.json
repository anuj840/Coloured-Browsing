{

  "manifest_version": 2,
  "name": "Coloured-Browsing",
  "version": "1.0",

  "description": "Search anything on google with coloured background.",

  "icons": {
    "48": "icons/border.png"
  },

  "permissions": ["activeTab"],

  'browser_action': {
    "default_icon": "icons/border.png",
    "default_popup": "popup.html"
  },

  "content_scripts": [
    {
      "matches": ["*://*.google.com/*"],
      "js": ["coloured.js"]
    }
  ]

}
